FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

writeControl    writeTime; // this ensures that it's writing only at writeInterval

sets
(

    // make sure to change (x1 y1 z1) and (x2 y2 z2) to
    // the coordinates of the start and end points

    A
    {
        type    lineCell;
        axis    xyz;
        // A 
	start   (0 0 0);
	end     (0.6 0 0);
                    
    }
    B
    {
        type    lineCell;
        axis    xyz;
        // B 
	start   (0.6 0 0);
	end     (0.6 0.2 0);
                    
    }
    C
    {
        type    lineCell;
        axis    xyz;
        // C 
	start   (0.6 0.2 0);
	end     (3 0.2 0);
                    
    }
    D
    {
        type    lineCell;
        axis    xyz;
        // D 
	start   (0 1 0);
	end     (3 1 0);
                    
    }
);

fields          ( p rho U T);


