FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

writeControl    writeTime; // this ensures that it's writing only at writeInterval

sets
(

    // make sure to change (x1 y1 z1) and (x2 y2 z2) to
    // the coordinates of the start and end points

    front
    {
        type    lineCell;
        axis    xyz;
        // cylnormal_pi2 
	start   (-3.75 4 0);
	end     (-3.75 -4 0);
                    
    }
    back
    {
        type    lineCell;
        axis    xyz;
        // cylnormal_3pi4 
	start   (5 4 0);
	end     (5 -4 0);
                    
    }

);

fields          ( p U );


